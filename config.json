{
  "source": ["01_intermediate/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "files": [
        {
          "destination": "02_output/css/variables.css",
          "format": "css/variables"
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "files": [
        {
          "destination": "02_output/js/variables.js",
          "format": "javascript/es6"
        }
      ]
    }
  }
}
