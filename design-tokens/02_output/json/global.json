{
  "meta": {
    "projectTitle": "<BRAND>",
    "version": "v0.9.0",
    "projectSubtitle": "Data Design Language",
    "lastUpdated": 1986,
    "authors": "Moritz Stefaner / Truth & Beauty with Christian Laesser, Alice Thudt, Flavio Gortana"
  },
  "typography": {
    "fontFamily": {
      "base": "Inter",
      "heading": "Inter",
      "mono": "Fira Mono"
    },
    "lineHeight": {
      "base": "160%",
      "tighter": "145%",
      "tightest": "115%"
    },
    "fontWeight": {
      "regular": 400,
      "bold": 700,
      "semiBold": 600
    },
    "letterSpacing": {
      "base": "0%",
      "looser": "15%"
    },
    "paragraphSpacing": {
      "none": 0,
      "base": 8
    },
    "textCase": {
      "none": "none",
      "uppercase": "uppercase"
    },
    "textDecoration": {
      "none": "none"
    }
  },
  "effect": {
    "depth": {
      "card": {
        "x": 1,
        "y": 1,
        "blur": 3,
        "spread": 0,
        "color": "#00000033",
        "type": "dropShadow"
      },
      "hover": {
        "x": 3,
        "y": 3,
        "blur": 6,
        "spread": 0,
        "color": "#00000033",
        "type": "dropShadow"
      },
      "modal": {
        "color": "#00000033",
        "type": "dropShadow",
        "x": 0,
        "y": 7,
        "blur": 10,
        "spread": 0
      },
      "ui": {
        "x": 1,
        "y": 1,
        "blur": 2,
        "spread": 0,
        "color": "#00000033",
        "type": "dropShadow"
      }
    }
  },
  "size": {
    "breakpoint": {
      "xs": 480,
      "sm": 640,
      "md": 960,
      "lg": 1200,
      "xl": 1440
    },
    "maxContentWidth": 1440,
    "minContentWidth": 320,
    "borderRadius": {
      "base": 2,
      "bigger": 5
    },
    "borderWidth": {
      "s": 0.5,
      "m": 1,
      "l": 2,
      "xl": 3,
      "xxl": 4
    },
    "borderWidthDouble": {
      "s": 1,
      "m": 2,
      "l": 4,
      "xl": 6,
      "xxl": 8
    }
  }
}