{
  "name": "design-token-example",
  "version": "1.0.0",
  "author": "",
  "watch": {
    "build": [
      "00_input/**/*.json"
    ]
  },
  "scripts": {
    "build": "npm run build:token-transform; npm run build:style-dictionary",
    "build:token-transform": "token-transformer --expand-typography --expand-shadow 00_input/figma-tokens.json 01_intermediate/style-dict-tokens.json global,_palettes _palettes",
    "build:style-dictionary": "style-dictionary build --config config.json",
    "watch": "npm-watch"
  },
  "dependencies": {
    "npm-watch": "^0.9.0",
    "style-dictionary": "^3.7.1",
    "token-transformer": "0.0.27"
  }
}
